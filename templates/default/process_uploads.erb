    next
  end

  Find.find("/home/#{uname}/uploads") do |path|
    case path
    when /.*\.csv$/i
      process(org_slug, path, "NONE")
    when /.*\.gz$/i
      process(org_slug, path, "GZIP")
    when /.*\.zip$/i
      process(org_slug, path, "ZIP")
    end
  end
end
