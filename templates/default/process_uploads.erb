def send_to_legacy_importer(org_slug, path, compression, is_full_import)
  case compression
    when "CSV"
      File.open(path) do |f|
        send_decompressed_stream_to_legacy_importer(org_slug, f, is_full_import)
      end
    when "GZIP"
      Zlib::GzipReader.open(path) do |gz|
        send_decompressed_stream_to_legacy_importer(org_slug, gz, is_full_import)
      end
    when "ZIP"
      Zip::ZipFile.open(path) do |zf|
        zf.each do |f|
          if f.name =~ /.*\.csv$/i
            send_decompressed_stream_to_legacy_importer(org_slug, f.get_input_stream, is_full_import)
          end
        end
      end
